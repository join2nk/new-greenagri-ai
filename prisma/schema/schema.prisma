generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}




// contact us form submissions
model ContactFormSubmission {
  id          String   @id @default(uuid())
  name        String
  email       String
  subject     String?
  message     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}






// Quote form details
model quoteformdetails {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  message    String?
  phone      String?
  created_at DateTime @default(now())
}

model ContactForm{
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  companyName String
  productType String
  message     String?
  createdAt   DateTime @default(now())
}
